# ============================================
# BOLÃO DOS AMIGOS - Variáveis de Ambiente
# ============================================
# Copie este arquivo para .env e configure os valores

# ============================================
# BANCO DE DADOS (PostgreSQL)
# ============================================
DATABASE_URL="postgresql://postgres:123456@localhost:5432/bolaoamigos?schema=public"

# ============================================
# AUTENTICAÇÃO (JWT)
# ============================================
JWT_SECRET="sua-chave-secreta-super-segura-aqui-mude-em-producao"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="sua-chave-secreta-refresh-token-super-segura-mude-em-producao"
JWT_REFRESH_EXPIRES_IN="30d"

# ============================================
# BACKEND (NestJS)
# ============================================
API_PORT=3001
API_HOST="localhost"
NODE_ENV="development"

# CORS - Origens permitidas (separadas por vírgula)
CORS_ORIGINS="http://localhost:3000"

# ============================================
# FRONTEND (Next.js)
# ============================================
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXT_PUBLIC_APP_NAME="Bolão dos Amigos"

# ============================================
# REGRAS DE NEGÓCIO
# ============================================
# Minutos antes do jogo para bloquear palpites
BLOQUEIO_PALPITE_MINUTOS=15

# ============================================
# CONFIGURAÇÕES OPCIONAIS
# ============================================
# Upload de imagens (escudos de times)
# UPLOAD_DIR="./uploads"
# MAX_FILE_SIZE="5MB"

